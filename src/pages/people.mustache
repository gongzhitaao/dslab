<!-- -*- mode: web -*- -->

<!DOCTYPE html>
<html>
  {{> partials/head}}
  <body class="people">

    <div class="container">

      {{> partials/header}}

      <div class="row">
        <div class="col-xs-12 col-md-offset-2 col-md-8">
          <h1>Faculty</h1>
        </div>
      </div>

      {{#faculties}}
        <div class="row">
          <div class="col-xs-3 col-sm-2 col-md-offset-1">
            <img class="img-rounded img-responsive" src="{{basics.picture}}" alt="{{basics.name}}">
          </div>
          <div class="col-xs-9 col-sm-10 col-md-9">
            <h4><a href="{{basics.website}}">{{basics.name}}</a></h4>
            <div>
              {{#work}}
                <em>{{position}}</em>, {{company}}
                <p>{{summary}}</p>
              {{/work}}
            </div>

            {{#education}}
              <div class="row" >
                <div class="col-xs-3 col-sm-1">
                  {{endDate}}
                </div>
                <div class="col-xs-3 col-sm-1">
                  {{studyType}}
                </div>
                <div class="col-xs-12 col-sm-4">
                  {{area}}
                </div>
                <div class="col-xs-12 col-sm-5">
                  {{institution}}
                </div>
              </div>
            {{/education}}
          </div>
        </div>
      {{/faculties}}

      <div class="row">
        <div class="col-sm-12 col-md-offset-2 col-md-8">
          <h1>Ph.D.</h1>
        </div>
      </div>

      {{#phds}}
        <div class="row">
          <div class="col-xs-2 col-md-1 col-md-offset-1">
            <img class="img-rounded img-responsive"
                 src="{{basics.picture}}" alt="{{basics.name}}">
          </div>
          <div class="col-xs-10 col-sm-11 col-md-10">
            <h4> <a href="{{basics.website}}">{{basics.name}}</a> </h4>
            {{#education}}
              <div class="row" >
                <div class="col-xs-2 col-sm-1">
                  {{endDate}}
                </div>
                <div class="col-xs-2 col-sm-1">
                  {{studyType}}
                </div>
                <div class="col-xs-4 col-sm-4">
                  {{area}}
                </div>
                <div class="col-xs-4 col-sm-5">
                  {{institution}}
                </div>
              </div>
            {{/education}}
          </div>
        </div>
      {{/phds}}

      <div class="row">
        <div class="col-sm-12 col-md-offset-2 col-md-8">
          <h1>Masters</h1>
        </div>
      </div>

      {{#masters}}
        <div class="row">
          <div class="col-xs-2 col-md-1 col-md-offset-1">
            <img class="img-rounded img-responsive"
                 src="{{basics.picture}}" alt="{{basics.name}}">
          </div>
          <div class="col-xs-10 col-sm-11 col-md-10">
            <h4> <a href="{{basics.website}}">{{basics.name}}</a> </h4>
            {{#education}}
              <div class="row" >
                <div class="col-xs-2 col-sm-1">
                  {{endDate}}
                </div>
                <div class="col-xs-2 col-sm-1">
                  {{studyType}}
                </div>
                <div class="col-xs-4 col-sm-4">
                  {{area}}
                </div>
                <div class="col-xs-4 col-sm-5">
                  {{institution}}
                </div>
              </div>
            {{/education}}
          </div>
        </div>
      {{/masters}}

      <div class="row">
        <div class="col-sm-12 col-md-offset-2 col-md-8">
          <h1>Alumni</h1>
        </div>
      </div>

      {{#alumni}}
        <div class="row">
          <div class="col-xs-2 col-md-1 col-md-offset-1">
            <img class="img-rounded img-responsive"
                 src="{{basics.picture}}" alt="{{basics.name}}">
          </div>
          <div class="col-xs-10 col-sm-11 col-md-10">
            <h4><a href="{{basics.website}}">{{basics.name}}</a></h4>
            <div class="work">
              {{#work.0}}
                <em>{{position}}</em>, {{company}}
              {{/work.0}}
            </div>
            {{#education}}
              <div class="row" >
                <div class="col-xs-2 col-sm-1">
                  {{endDate}}
                </div>
                <div class="col-xs-2 col-sm-1">
                  {{studyType}}
                </div>
                <div class="col-xs-4 col-sm-4">
                  {{area}}
                </div>
                <div class="col-xs-4 col-sm-5">
                  {{institution}}
                </div>
              </div>
            {{/education}}
          </div>
        </div>
      {{/alumni}}

    </div>

    {{> partials/footer}}

  </body>
</html>
